{
  "name": "tx",
  "version": "1.0.0",
  "description": "Examples communicating with Avail",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build",
    "start": "tsc && node dist/data_full.js",
    "data": "tsc && node dist/app.js",
    "full": "tsc && node dist/tx_data.js",
    "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package sample-polkadotjs-typegen/interfaces --input ./src/interfaces --endpoint ./data-avail.json",
    "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package sample-polkadotjs-typegen/interfaces --endpoint ./data-avail.json --output ./src/interfaces",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "ISC",
  "devDependencies": {
    "@polkadot/typegen": "10.7.2",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@polkadot/api": "10.7.2",
    "yargs": "^17.6.2"
  }
}
